#include <iostream>
using namespace std; 
int main()
{
	int number, least_significant_bit;
	cout << "Input binary digit: ";
	cin >> number; 
	least_significant_bit = number % 10; //выделение младшего бита
	if (least_significant_bit == 1)
	{
		cout << "The number is odd.";
	}
	else
	{
		cout << "The number is even.";
	}
	return 0;
}
